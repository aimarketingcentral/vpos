<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="POSLinkMauiDemo.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            HorizontalOptions="Start">

            <HorizontalStackLayout Margin="0,20,0,0" x:Name="commSettingStackLayout">
                <Label
                    Text="Comm type:"
                    SemanticProperties.HeadingLevel="Level2"
                    FontSize="18"
                    HorizontalOptions="Center" 
                    />

                <Entry 
                    x:Name="commSettingEntry"
                    Text="TCP"
                    TextChanged="CommSettingChanged"
                    WidthRequest="200"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout Margin="0,10,0,0" x:Name="ipStackLayout">
                <Label
                    Text="IP:"
                    SemanticProperties.HeadingLevel="Level2"
                    FontSize="18"
                    HorizontalOptions="Center" 
                    />

                <Entry 
                    x:Name="ipEntry"
                    Text="127.0.0.1"
                    WidthRequest="200"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout Margin="0,10,0,0" x:Name="portStackLayout">
                <Label
                    Text="Port:"
                    SemanticProperties.HeadingLevel="Level2"
                    FontSize="18"
                    HorizontalOptions="Center" 
                    />

                <Entry 
                    x:Name="portEntry"
                    Text="10009"
                    WidthRequest="200"/>
            </HorizontalStackLayout>


            <HorizontalStackLayout Margin="0,10,0,0" x:Name="serialPortStackLayout">
                <Label
                    Text="Serial Port:"
                    SemanticProperties.HeadingLevel="Level2"
                    FontSize="18"
                    HorizontalOptions="Center" 
                    />

                <Entry 
                    x:Name="serialPortEntry"
                    Text="/dev/ttyS4"
                    WidthRequest="200"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout Margin="0,10,0,0" x:Name="baudrateStackLayout">
                <Label
                    Text="Baudrate:"
                    SemanticProperties.HeadingLevel="Level2"
                    FontSize="18"
                    HorizontalOptions="Center" 
                    />

                <Entry 
                    x:Name="baudrateEntry"
                    Text="9600"
                    WidthRequest="200"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout Margin="0,10,0,0" x:Name="timeoutStackLayout">
                <Label
                    Text="Timeout:"
                    SemanticProperties.HeadingLevel="Level2"
                    FontSize="18"
                    HorizontalOptions="Center" 
                    />

                <Entry 
                    x:Name="timeoutEntry"
                    Text="60000"
                    WidthRequest="200"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout Margin="0,10,0,0">
                <Label
                    Text="Response Code:"
                    SemanticProperties.HeadingLevel="Level2"
                    FontSize="18"
                    HorizontalOptions="Center" 
                    />

                <Entry 
                    x:Name="resCodeEntry"
                    WidthRequest="200"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout Margin="0,10,0,0">
                <Label
                    Text="Response Message:"
                    SemanticProperties.HeadingLevel="Level2"
                    FontSize="18"
                    HorizontalOptions="Center" 
                    />

                <Entry 
                    x:Name="resMsgEntry"
                    WidthRequest="200"/>
            </HorizontalStackLayout>

            <Button
                x:Name="CounterBtn"
                Text="Do Init"
                Clicked="OnCounterClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
